.chatWrapper
  width 100%
  height 110vw
  overflow scroll
  .chatContainer
    width 100%
    background #e7e7e7
    padding 2vw 
    box-sizing border-box
    padding-bottom 8vw
    div
      width 100%
      margin-top .5vw
      .manager
        display inline-block
        width 10vw
        height 4.6vw
        background #fca851
        color #ffffff
        font-size 3.3vw
        text-align center
        line-height 4.6vw
        border-radius 3px
        margin-left .3vw
      .uname  
        color #a1a1a1
        font-size 3.1vw
        margin-left .5vw
      .content
        font-size 3.3vw   
        margin-left .5vw