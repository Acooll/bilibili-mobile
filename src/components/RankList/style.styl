.rankList_container
  width 100%
  margin-top 9vw
  .rank_item
    width 100%  
    display flex 
    color #666666
    padding  1.5vw 0 0 0
    box-sizing border-box
    .rank_index
      font-size 4.5vw
      padding 0 2vw 0 0
      width 8vw
      margin-left 2vw
      display flex
      align-items center
      justify-content center
      flex-shrink:0
      img 
        width 5vw
        height 8vw
    .rank_pic
      img  
        width 38vw
        height 24vw
        border-radius 5px
    .rank_info
      margin-left 3vw
      color #999
      .title
        font-size 3.5vw
        color #212121
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
        overflow hidden
      .up_name  
        font-size 3vw
        margin-top 2vw
        display flex
        img
          width 5vw
          height 5vw
        .name 
          margin-left 2vw   
      .play_info
        display flex
        margin-top 2vw
        font-size 3vw
        img
          width 4vw
          height 4vw
        .played
          margin-left 1vw
        .icon_danmu
          margin-left 2vw  
        .danmu  
          margin-left 1vw