.channelList
  width 100%
  margin-top 20vw
  .listContent
    width 100%
    .contentTitle
      width 100%
      display flex
      justify-content space-between
      padding 3vw
      box-sizing border-box
      font-size 4.1vw
      .title
        margin 3.3vw 0 0 2vw
      a
        // display inline-block  
        overflow hidden
        display flex
        p 
          font-size 3.6vw
          color #ffa726
          margin-right 1.6vw
        img  
          width 4.4vw
          height 4.4vw
          margin-top 3.6vw
          margin-right .5vw
    .itemContent
      width  100%
      display flex
      flex-wrap wrap
      margin-top -4.4vw
      .liveItem
        width 50vw
        padding 1.5vw
        box-sizing border-box
        div
          width 100%
          img
            width 100%
            height 28vw
            border-radius 5px
        .liveTitle  
          width 40vw
          font-size 3.4vw  