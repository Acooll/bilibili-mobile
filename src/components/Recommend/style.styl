.recommend_container
  width 100vw
  display flex
  flex-wrap wrap
  justify-content space-between
  margin-top -10vw
  .recommend_item
    width 50vw
    height 35vw
    display inline-block
    display flex 
    flex-direction column
    margin-top 10vw
    .item 
      width 46vw
      padding-left 2.4vw
      height 40vw
      box-sizing border-box
      img 
        width 46vw
        height 30vw
        border-radius 6px
    .title
      height 150px
      font-size 3.3vw  
      color #212121
      text-decoration 'none'
      padding 0 0 0 2vw
      margin-top 4vw
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;